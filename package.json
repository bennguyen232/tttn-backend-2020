{
  "name": "TTTN-2020",
  "version": "1.0.9",
  "description": "Backend boilerplate codebase based on Loopback 4 framework",
  "engines": {
    "node": ">= 10.6.3",
    "npm": "6.4.1"
  },
  "scripts": {
    "dev": "nodemon",
    "debug": "npm run build && node -r source-map-support/register --nolazy --inspect-brk=9229 index.js",
    "build": "lb-tsc --copy-resources",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "migrate": "node ./dist/migrate",
    "release:staging": ".deploy/deploy-staging.sh"
  },
  "dependencies": {
    "@loopback/authentication": "^4.1.1",
    "@loopback/authorization": "^0.4.10",
    "@loopback/boot": "^2.0.2",
    "@loopback/context": "^3.2.0",
    "@loopback/core": "^2.2.0",
    "@loopback/openapi-v3": "^3.1.1",
    "@loopback/repository": "^2.0.2",
    "@loopback/rest": "^3.1.0",
    "@loopback/rest-explorer": "^1.4.10",
    "@loopback/security": "^0.2.2",
    "@loopback/service-proxy": "^1.3.17",
    "@types/ejs": "^3.0.2",
    "aws-sdk": "^2.657.0",
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.0",
    "csv-parser": "^2.3.2",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.15",
    "loopback-connector-mongodb": "^5.2.3",
    "loopback-connector-rest": "^3.6.0",
    "moment": "^2.24.0",
    "mongodb": "^3.5.5",
    "ms": "^2.1.2",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "read-excel-file": "^4.0.6",
    "ts-transformer-keys": "^0.4.1",
    "uuid": "^7.0.3",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@loopback/build": "^2.1.0",
    "@loopback/eslint-config": "^4.1.5",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.3.3",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.5.4",
    "@types/multer": "^1.4.2",
    "@types/node": "^10.17.18",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^7.0.2",
    "@types/validator": "^10.11.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "ejs": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.3.0",
    "husky": "^3.1.0",
    "nodemon": "^1.19.4",
    "source-map-support": "^0.5.16",
    "typescript": "~3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "commit-msg": "commitlint --verbose -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src",
      ".env",
      "index.js",
      "index.ts"
    ],
    "ext": "ts,js",
    "exec": "npm run build && node -r source-map-support/register index.js"
  }
}
